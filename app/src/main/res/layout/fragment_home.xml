<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="16dp"
        android:elevation="8dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/parent_title_home_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_medium"
                    android:text="Solusi,"
                    android:textColor="@color/primary_color"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="Kesehatan Anda"
                    android:textColor="@color/primary_color"
                    android:textSize="16sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_subtitle_home_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/parent_title_home_1"
                android:layout_alignRight="@id/parent_title_home_1"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="16dp"
                android:fontFamily="@font/poppins"
                android:text="Update informasi seputar kesehatan semua bisa disini !"
                android:textColor="@color/primary_color"
                android:textSize="12sp" />

            <com.google.android.material.button.MaterialButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_subtitle_home_1"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginBottom="16dp"
                android:backgroundTint="@color/primary_color"
                android:text="Selengkapnya"
                app:cornerRadius="8dp" />

            <ImageView
                android:id="@+id/iv_home_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:src="@drawable/ill_home_1" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginHorizontal="16dp"
        app:cardCornerRadius="16dp"
        android:elevation="8dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_title_home_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:text="Layanan Khusus"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:textColor="@color/primary_color"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_subtitle_home_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_title_home_2"
                android:layout_alignRight="@id/tv_title_home_2"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="16dp"
                android:fontFamily="@font/poppins"
                android:text="Tes Covid 19, Cegah Corona Sedini Mungkin"
                android:textColor="@color/primary_color"
                android:textSize="12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_subtitle_home_2"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginBottom="16dp"
                android:backgroundTint="@color/primary_color"
                android:text="Daftar Tes"
                android:gravity="center"
                android:drawableTint="@color/primary_color"
                android:drawableRight="@drawable/ic_arrow_right"
                android:drawablePadding="8dp"
                android:fontFamily="@font/poppins_semibold"
                android:textSize="12sp"
                app:cornerRadius="8dp" />

            <ImageView
                android:id="@+id/iv_home_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="16dp"
                android:src="@drawable/ill_home_2" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginHorizontal="16dp"
        app:cardCornerRadius="16dp"
        android:elevation="8dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_title_home_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:text="Track Pemeriksaan"
                android:layout_toRightOf="@id/iv_home_3"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:textColor="@color/primary_color"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_subtitle_home_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_title_home_3"
                android:layout_alignLeft="@id/tv_title_home_3"
                android:layout_marginTop="8dp"
                android:layout_marginRight="16dp"
                android:fontFamily="@font/poppins"
                android:text="Kamu dapat mengecek progress pemeriksaanmu disini"
                android:textColor="@color/primary_color"
                android:textSize="12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_subtitle_home_3"
                android:layout_alignLeft="@id/tv_subtitle_home_3"
                android:layout_marginTop="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="16dp"
                android:backgroundTint="@color/primary_color"
                android:text="Track"
                android:drawableTint="@color/primary_color"
                android:gravity="center"
                android:drawableRight="@drawable/ic_arrow_right"
                android:drawablePadding="8dp"
                android:fontFamily="@font/poppins_semibold"
                android:textSize="12sp"
                app:cornerRadius="8dp" />

            <ImageView
                android:id="@+id/iv_home_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="16dp"
                android:layout_centerVertical="true"
                android:src="@drawable/ill_home_3" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>